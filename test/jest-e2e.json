{
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.(t|j)sx$": "ts-jest"
  },
  "moduleNameMapper": {
    "^react$": "<rootDir>/../node_modules/react",
    "^@react-email/components$": "<rootDir>/mocks/react-email-mock.ts"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setup/jest-setup.ts"
  ]
}
